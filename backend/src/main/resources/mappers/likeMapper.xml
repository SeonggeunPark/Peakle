<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.mvc.model.dao.LikeDao">

	<insert id="insertLike" parameterType="int">
		INSERT INTO likes (`user_id`, `facility_id`) 
		VALUES (#{userId}, #{facilId})
	</insert>
	
	<delete id="deleteLike" parameterType="int">
		DELETE FROM likes
		WHERE user_id = #{userId} 
		AND facility_id = #{facilId};
	</delete>
	
	<select id="selectUserLike" parameterType="int" resultType="Like">
		SELECT *
		FROM likes
		WHERE user_id = #{id}
	</select>
</mapper>